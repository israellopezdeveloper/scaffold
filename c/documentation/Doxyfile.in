# Doxyfile for Doxygen configuration

# Project details
PROJECT_NAME           = @PACKAGE_NAME@
PROJECT_NUMBER         = @VERSION@

# Input/output options
OUTPUT_DIRECTORY       = docs
CREATE_SUBDIRS         = YES

# Input settings
INPUT                  =  @top_srcdir@/src @top_srcdir@/include @top_srcdir@/README.md
FILE_PATTERNS          = *.c *.cpp *.h *.hpp
RECURSIVE              = YES

# Build related settings
EXTRACT_ALL            = YES
EXTRACT_PRIVATE        = YES
EXTRACT_STATIC         = YES
EXTRACT_LOCAL_CLASSES  = YES
EXCLUDE_SYMBOLS        = __attribute__
HAVE_DOT               = YES
DOT_PATH               = /usr/bin/dot
CLASS_GRAPH            = YES
COLLABORATION_GRAPH    = YES
GROUP_GRAPHS           = YES
DOT_GRAPH_MAX_NODES    = 50
DOT_IMAGE_FORMAT       = svg
CALL_GRAPH             = YES
CALLER_GRAPH           = YES


# Documented source code
SOURCE_BROWSER         = YES
INLINE_SOURCES         = YES
STRIP_CODE_COMMENTS    = YES

# Output formats
GENERATE_HTML          = YES
GENERATE_LATEX         = YES
GENERATE_MAN           = YES
GENERATE_XML           = NO

# HTML settings
HTML_EXTRA_STYLESHEET  = @top_srcdir@/doc/doxygen-awesome.css @top_srcdir@/doc/doxygen-awesome-sidebar-only-darkmode-toggle.css
HTML_EXTRA_FILES       = @top_srcdir@/doc/doxygen-awesome-darkmode-toggle.js @top_srcdir@/doc/doxygen-awesome-fragment-copy-button.js @top_srcdir@/doc/doxygen-awesome-interactive-toc.js @top_srcdir@/doc/doxygen-awesome-paragraph-link.js @top_srcdir@/doc/doxygen-awesome-tabs.js
USE_MDFILE_AS_MAINPAGE = @top_srcdir@/README.md
HTML_HEADER            = @top_srcdir@/doc/header.html
HTML_COLORSTYLE        = DARK
HTML_OUTPUT            = html
HTML_FILE_EXTENSION    = .html

# Warn about undocumented members
WARN_IF_UNDOCUMENTED   = YES
WARN_IF_DOC_ERROR      = YES
WARN_NO_PARAMDOC       = YES

# Index options
GENERATE_TREEVIEW      = YES
FULL_PATH_NAMES        = YES

# Preprocessor settings
ENABLE_PREPROCESSING   = YES
MACRO_EXPANSION        = NO
EXPAND_ONLY_PREDEF     = NO
SEARCH_INCLUDES        = YES
INCLUDE_PATH           = include
INCLUDE_FILE_PATTERNS  = *.h *.hpp

# External documentation
TAGFILES               =
GENERATE_TAGFILE       =
ALLEXTERNALS           = NO
